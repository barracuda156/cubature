CUBATURE_DIR=cubature-1.0.3
CUBA_DIR=Cuba-4.2
PKG_CFLAGS=-DR_PACKAGE=1 -DTEST_INTEGRATOR=0 -I./$(CUBATURE_DIR) -I./$(CUBA_DIR) -I../inst/include
PKG_CPPFLAGS=-DR_PACKAGE=1 -DTEST_INTEGRATOR=0 -I./$(CUBATURE_DIR) -I./$(CUBA_DIR) -I../inst/include
PKG_LIBS=-L$(CUBATURE_DIR) -L$(CUBA_DIR) -lcubature -lcuba

$(SHLIB): Rcpp-cubature.o Rcpp-cuba.o RcppExports.o rcubature.o

Rcpp-cubature.o: cubature.ts
RcppExports.o: cubature.ts
rcubature.o: cubature.ts cuba.ts

Rcpp-Cuba.o: cuba.ts

cubature.ts:
	cd $(CUBATURE_DIR) && $(MAKE) libcubature.a CC="$(CC)" CFLAGS="$(CFLAGS) -I../../inst/include $(CPICFLAGS) -DNOSHORTS -DR_PACKAGE=1" AR=$(AR) RANLIB=$(RANLIB)
	touch $@

cuba.ts:
	cp $(CUBA_DIR)/src/common/Fork-cuba-win.c $(CUBA_DIR)/src/common/Fork.c
	cp $(CUBA_DIR)/src/common/stddecl-win.h $(CUBA_DIR)/src/common/stddecl.h
	cp $(CUBA_DIR)/config-cuba-win.h $(CUBA_DIR)/config.h
	cp $(CUBA_DIR)/Makefile_cuba.win $(CUBA_DIR)/Makefile
	cd $(CUBA_DIR) && CC="$(CC)" CFLAGS="$(CFLAGS) -I../../inst/include -UHAVE_FORK -DHAVE_CONFIG_H -DREALSIZE=8 -I./src/common -I. $(CPICFLAGS)" AR=$(AR) RANLIB=$(RANLIB) $(MAKE) lib
	touch $@

clean:
	rm -f Rcpp-cubature.o Rcpp-cuba.o RcppExports.o rcubature.o
	rm -f $(CUBATURE_DIR)/*.o
	rm -f $(CUBATURE_DIR)/libcubature.a $(CUBATURE_DIR)/cubature.ts
	cd $(CUBA_DIR) && make clean
	rm -f $(CUBA_DIR)/libcuba.a $(CUBA_DIR)/cuba.ts
